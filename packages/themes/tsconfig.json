{
  "extends": ["@tsconfig/strictest", "@tsconfig/next"],
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "incremental": true,
    "target": "ES2015"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "scripts/**/*"]
}
