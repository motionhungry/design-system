{
  "extends": ["@tsconfig/strictest", "@tsconfig/next"],
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "incremental": true,
    "target": "ES2015",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["turbowatch.ts", "src/**/*.ts", "src/**/*.tsx", "scripts/**/*"]
}
